# base image
FROM alpine:3.19.0

# install mysql
RUN apk update && \
    apk add --no-cache mysql=10.11.6-r0 && \
    rm -rf /var/cache/apk/* /tmp/* /var/tmp/*

# set up working directory
WORKDIR /usr/local/mysql

# expose MySQL port
EXPOSE 3306

# configure MySQL to start when the container starts
CMD ["mysqld", "--user=mysql"]
